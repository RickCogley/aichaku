{
  "name": "@rick/aichaku",
  "version": "0.46.1",
  "exports": {
    ".": "./mod.ts",
    "./cli": "./cli.ts"
  },
  "description": "AI-optimized project methodology installer for Claude Code - brings affection (愛着) to your development workflow",
  "keywords": [
    "claude",
    "claude-code",
    "ai",
    "methodology",
    "standard",
    "principles",
    "shape-up",
    "project-management"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/RickCogley/aichaku.git"
  },
  "imports": {
    "@rick/nagare": "jsr:@rick/nagare@2.18.0",
    "@std/semver": "jsr:@std/semver@^1.0.5",
    "@std/cli": "jsr:@std/cli@^1.0.21",
    "@std/fs": "jsr:@std/fs@^1.0.19",
    "@std/path": "jsr:@std/path@^1.1.1",
    "@std/assert": "jsr:@std/assert@^1.0.13",
    "@std/async": "jsr:@std/async@^1.0.14",
    "@std/json": "jsr:@std/json@^1.0.2",
    "@std/crypto": "jsr:@std/crypto@^1.0.5",
    "@modelcontextprotocol/sdk": "npm:@modelcontextprotocol/sdk@1.17.1",
    "fuse.js": "npm:fuse.js@7.1.0",
    "zod": "npm:zod@3.23.8"
  },
  "tasks": {
    "dev": "deno run --watch mod.ts",
    "test": "deno test --allow-read --allow-write --allow-env --allow-run",
    "fmt": "deno fmt",
    "fmt:check": "deno fmt --check",
    "fmt:md": "markdownlint-cli2 --fix \"**/*.md\"",
    "lint": "deno lint",
    "lint:markdown": "markdownlint-cli2 --fix \"**/*.md\"",
    "check": "deno check src/**/*.ts cli.ts mod.ts version.ts nagare.config.ts nagare-launcher.ts init.ts",
    "nagare": "deno run -A nagare-launcher.ts",
    "release": "deno task nagare",
    "release:patch": "deno task nagare patch",
    "release:minor": "deno task nagare minor",
    "release:major": "deno task nagare major",
    "rollback": "deno task nagare rollback",
    "version": "deno run --allow-read version-check.ts",
    "docs": "deno task nagare docs",
    "docs:serve": "deno task nagare docs --serve",
    "docs:api": "deno doc --html --name=\"Aichaku (愛着) - AI-Optimized Methodology Library\" --output=./docs/api ./mod.ts",
    "changelog": "deno task nagare changelog --preview",
    "validate": "deno task nagare validate",
    "build": "deno run -A scripts/build-binaries.ts",
    "build:upload": "deno run -A scripts/build-binaries.ts --upload",
    "docs:lint": "deno run --allow-read --allow-env src/commands/docs-lint.ts"
  },
  "fmt": {
    "exclude": [
      ".claude/",
      "scratch/",
      "dist/",
      "docs/api/",
      "docs/projects/**/*.ts",
      "examples/**/*.ts",
      "src/commands/*-v2.ts",
      "src/utils/config-manager.test.ts",
      "src/utils/migration-helper.ts"
    ],
    "lineWidth": 120,
    "proseWrap": "always",
    "useTabs": false,
    "indentWidth": 2,
    "semiColons": true,
    "singleQuote": false,
    "singleBodyPosition": "maintain",
    "typeLiteral.separatorKind": "semiColon",
    "jsx.bracketPosition": "nextLine"
  },
  "lint": {
    "exclude": [
      ".claude/",
      "scratch/",
      "dist/",
      "docs/api/",
      "docs/projects/**/*.ts",
      "examples/**/*.ts",
      "src/commands/*-v2.ts",
      "src/utils/config-manager.test.ts",
      "src/utils/migration-helper.ts"
    ],
    "rules": {
      "tags": [
        "recommended",
        "eqeqeq",
        "no-await-in-loop",
        "camelcase",
        "default-param-last",
        "no-eval"
      ]
    }
  },
  "publish": {
    "include": [
      "mod.ts",
      "cli.ts",
      "version.ts",
      "deps.ts",
      "src/",
      "docs/",
      "README.md",
      "LICENSE",
      "CHANGELOG.md"
    ],
    "exclude": [
      "**/*_test.ts",
      "**/*.test.ts",
      ".github/",
      ".claude/",
      "nagare-launcher.ts",
      "nagare.config.ts",
      "deno.lock",
      "!version.ts"
    ]
  },
  "exclude": [
    ".claude/",
    "scratch/",
    "dist/",
    "docs/api/",
    "docs/projects/**/*.ts",
    "examples/**/*.ts",
    "src/commands/*-v2.ts",
    "src/utils/config-manager.test.ts",
    "src/utils/migration-helper.ts"
  ],
  "compilerOptions": {
    "lib": [
      "deno.window"
    ],
    "strict": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true
  },
  "test": {
    "include": [
      "src/**/*_test.ts"
    ]
  }
}
